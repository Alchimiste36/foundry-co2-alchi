<form class="{{cssClass}} flexrow" autocomplete="off">
    {{log "Chroniques Oubliées | actor" this}}
    {{> "systems/co/templates/actors/parts/character-sidebar.hbs"}}
    <div class="main flexcol">
        <div class="header flexrow">
            <div class="details">
                <div class="form-label"><span class="field-label header">{{ localize 'CO.label.long.name' }}</span></div>
                <div class="form-value"><input class="field-value sans" name="name" type="text" value="{{actor.name}}" placeholder="Name" data-dtype="String"/></div>
                <div class="form-label"><a class="field-label header levelUp">{{ localize 'CO.label.long.level' }}</a></div>
                <div class="form-value"><input class="field-value sans" name="system.attributes.level.value" type="text" value="{{attributes.level.value}}" data-dtype="Number"/></div>
                <div class="nav">
                    {{!-- Sheet Tab Navigation --}}
                    <nav class="sheet-tabs tabs" data-group="primary">
                        <a class="item" data-tab="stats" title="{{ localize "CO.tabs.stats" }}"><i class="fas fa-address-card"></i></a>
                        <a class="item" data-tab="actions" title="{{ localize "CO.tabs.actions" }}"><i class="fas fa-dice-d20"></i></a>
                        <a class="item" data-tab="inventory" title="{{ localize "CO.tabs.inventory" }}"><i class="fas fa-backpack"></i></a>
                        <a class="item" data-tab="capacities" title="{{ localize "CO.tabs.capacities" }}"><i class="fas fa-sitemap"></i></a>
                        <a class="item" data-tab="bio" title="{{ localize "CO.tabs.bio" }}"><i class="fas fa-book-user"></i></a>
                    </nav>
                </div>
            </div>
        </div>
        <div class="content flexrow">
            {{ log "Chroniques Oubliées | detail" this}}
            <section class="sheet-body">
                <div class="tab stats" data-group="primary" data-tab="stats">
                    {{> "systems/co/templates/actors/parts/character-stats.hbs"}}
                </div>
                <div class="tab actions" data-group="primary" data-tab="actions">
                    {{> "systems/co/templates/actors/parts/character-actions.hbs"}}
                </div>
                <div class="tab inventory" data-group="primary" data-tab="inventory">
                    {{> "systems/co/templates/actors/parts/inventory/character-inventory.hbs"}}
                </div>
                <div class="tab capacities" data-group="primary" data-tab="capacities">
                    {{> "systems/co/templates/actors/parts/character-capacities.hbs"}}
                </div>
                <div class="tab bio" data-group="primary" data-tab="bio">
                    {{> "systems/co/templates/actors/parts/character-bio.hbs"}}
                </div>
            </section>
        </div>
    </div>
</form>
