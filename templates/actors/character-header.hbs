<header class="sheet-header">
  <div class="image-container">
    <img class="actor-img" src="{{actor.img}}" data-action="editImage" data-tooltip="{{actor.name}}" />
  </div>
  {{#if unlocked}}
    <input class="name" name="name" type="text" value="{{actor.name}}" placeholder="{{localize 'CO.label.long.name'}}" spellcheck="false" />
  {{else}}
    <span class="name">{{actor.name}}</span>
  {{/if}}
  <div class="level">
    <label class="level-label">{{localize "CO.label.short.level"}}</label>
    {{#if unlocked}}
      <input class="adjustable" type="text" name="system.attributes.level" value="{{attributes.level}}" data-dtype="Number" />
    {{else}}
      <span>{{attributes.level}}</span>
    {{/if}}
  </div>
  <div class="traits">
    <div class="species">
      {{#if (gt features.length 0)}}
        <a class="item-img" style="background-image: url('{{features.[0].img}}')"></a>
        <span>{{features.[0].name}}</span>
      {{/if}}
    </div>
    <div class="profiles">
      {{#if (gt profiles.length 0)}}
        <a class="item-img" style="background-image: url('{{profiles.[0].img}}')"></a>
        <span>{{profiles.[0].name}}</span>
      {{/if}}
      {{#if (gt profiles.length 1)}}
        <span class="slash">/</span>
        <a class="item-img" style="background-image: url('{{profiles.[1].img}}')"></a>
        <span>{{profiles.[1].name}}</span>
      {{/if}}
    </div>
  </div>
  <ol class="abilities">
    {{#each abilities as |ability id|}}
      <li class="ability" data-ability="{{id}}">
        <div class="ability-id" data-tooltip="{{localize (concat 'CO.abilities.long.' id)}}" data-tooltip-direction="UP">
          {{localize (concat "CO.abilities.short." id)}}
          {{#if ability.superior}}<i class="fas fa-asterisk"></i>{{/if}}
        </div>
        <a class="ability-mod" data-action="roll"data-roll-type="skillcheck" data-roll-target="{{id}}" data-tooltip="{{ability.tooltipValue}}">
          {{numberFormat ability.value decimals=0 sign=true}}
        </a>
      </li>
    {{/each}}
    <li class="abilities-controls controls">
      {{#if unlocked}}
        <a class="abilities-edit" data-action="editAbilities" data-tooltip="{{localize 'CO.ui.editStats'}}">
          <i class="fas fa-fw fa-edit"></i>
        </a>
      {{/if}}
    </li>
  </ol>
</header>
