<h3 class="form-header"><a class="section-toggle">{{localize "CO.ui.misc"}}</a></h3>
<div class="misc foldable">
    <div class="form-group">
        <label>{{localize "CO.ui.size"}}</label>
        <div class="form-fields">
            <select name="system.details.size" data-type="String" style="width:100%">
                {{#select details.size}}
                    {{#each @root.config.size as |label idx|}}
                        <option value="{{idx}}">{{localize label}}</option>
                    {{/each}}
                {{/select}}
            </select>
        </div>
    </div>
    <div class="form-group">
        <label>{{localize "CO.ui.languages"}}</label>
        <div class="form-fields">
            <input class="field-value" name="system.details.languages" type="text" value="{{system.details.languages}}" placeholder="{{localize "CO.ui.languages"}}" data-dtype="String">
        </div>
    </div>
</div>
<h3 class="form-header"><a class="section-toggle">{{localize "CO.ui.biography"}}</a></h3>
<div class="bio foldable">
    <div class="form-group">
        <label>{{localize "CO.ui.public"}}</label>
        <div class="form-fields">
            {{editor enrichedDescription target="system.details.biography.public" button=true owner=owner editable=editable}}
        </div>
    </div>
    <div class="form-group">
        <label>{{localize "CO.ui.private"}}</label>
        <div class="form-fields">
            {{editor enrichedDescription target="system.details.biography.private" button=true owner=owner editable=editable}}
        </div>
    </div>
</div>
