<div class="features section-container">
    <div class="section-header">
        <h4>{{localize "CO.ui.features"}} & {{localize "CO.label.long.profile"}}</h4>
    </div>
    <!-- FEATURES -->
    <div class="section-body-no-flex">
        <ol class="features-container items-container">
            <ol class="item-list">
                {{#each profiles as |item id|}}
                    <li class="item flexrow" data-item-id="{{item._id}}" data-item-type="{{item.type}}" draggable="false">
                        <div class="item-name flexrow">
                            <div class="item-image" style="background-image: url('{{item.img}}')"></div>
                            <h4><a class="item-control item-edit">{{item.name}}</a></h4>
                        </div>
                        <div class="item-controls-2">
                            <a class="item-control item-delete" title="CO.ui.delete"><i class="fas fa-trash"></i></a>
                        </div>
                    </li>
                {{/each}}
                {{#each features as |item id|}}
                    <li class="item flexrow" data-item-id="{{item._id}}" data-item-type="{{item.type}}" draggable="false">
                        <div class="item-name flexrow">
                            <div class="item-image" style="background-image: url('{{item.img}}')"></div>
                            <h4><a class="item-control item-edit">{{item.name}}</a></h4>
                        </div>
                        <div class="item-controls-2">
                            <a class="item-control item-delete" title="CO.ui.delete"><i class="fas fa-trash"></i></a>
                        </div>
                    </li>
                {{/each}}
            </ol>
        </ol>
    </div>
</div>
<div class="actions section-container">
    <div class="section-header">
        <h4>{{localize "CO.ui.actions"}}</h4>
        <div class="actions-controls controls">
<!--            <a class="action-add item-create" title="Add Action" data-type="action" data-action-type="action"><i class="fas fa-plus"></i></a>-->
        </div>
    </div>
    <!-- ACTIONS -->
    <div class="section-body-no-flex">
        <ol class="actions-container items-container">
            <ol class="item-list">
                {{#each actions as |item id|}}
                {{log (concat "Chroniques Oubli√©es | action " id) item}}
                    {{#if item.properties.visible}}
                    <li class="item flexrow" data-item-id="{{item.source}}" data-item-indice="{{id}}" data-item-type="action" draggable="false">
                        <div class="item-name flexrow" title="{{item.type}}">
                            <div class="item-image" style="background-image: url('{{item.img}}')"></div>
                            <h4><a class="item-control item-edit">{{item.label}}</a>&nbsp;
                            {{#if (eq item.type "melee")}}<i class="fas fa-fw fa-sword"></i>{{/if}}
                            {{#if (eq item.type "ranged")}}<i class="fas fa-fw fa-bow-arrow"></i>{{/if}}
                            {{#if (eq item.type "spell")}}<i class="fas fa-fw fa-hand-sparkles"></i>{{/if}}
                            {{#if (eq item.type "protection")}}<i class="fa-regular fa-fw fa-shield"></i>{{/if}}
                            {{#if (eq item.type "heal")}}<i class="fas fa-fw fa-hand-holding-medical"></i>{{/if}}
                            </h4>
                        </div>
                        <div class="item-controls-2">
                            {{#if item.properties.activable}}
                                <a class="item-roll rollable"><i class="fas fa-dice-d20"></i></a>
                            {{/if}}
                            <a class="item-chat chat" title="Send to chat"><i class="fas fa-fw fa-comment-alt"></i></a>
                        </div>
                    </li>
                    {{/if}}
                {{/each}}
            </ol>
        </ol>
    </div>
</div>