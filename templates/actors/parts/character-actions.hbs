<div class="actions-container">
    {{#each actions as |action id|}}
        <input type="hidden" value="{{action.source}}"/>
        {{log (concat "Chroniques Oubli√©es | action " id) action}}

        {{#if action.properties.activable}} 
            <div>{{action.label}} {{#if action.properties.enabled}} <i class="fa-solid fa-check"></i> {{else}} <i class="fa fa-times"></i> {{/if}} </div>
        {{/if}}
    {{/each}}
</div>
