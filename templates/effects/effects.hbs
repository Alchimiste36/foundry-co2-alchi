<ol class="inventory-list">
    <li class="inventory-header flexrow">
        <h3 class="item-name flexrow">{{localize "CO.label.long.effects"}}</h3>
        <div class="item-detail">{{localize "CO.ui.duration"}}</div>
        {{#if isEffectsEditable}}
            <div class="item-detail">{{localize "CO.ui.action"}}</div>
            <div class="item-controls">
                <a class="item-control item-create effect-create" title="{{localize 'CO.effect.add'}}"><i class="fas fa-plus"></i>&nbsp; {{localize "CO.ui.add"}}</a>
            </div>
        {{/if}}
    </li>
    <ol class="item-list">
        {{#each effects as |effect id|}}
            {{> "systems/co/templates/effects/effects-item.hbs" effect}}
        {{/each}}
    </ol>
</ol>