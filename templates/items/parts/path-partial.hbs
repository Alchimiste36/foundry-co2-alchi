<ol class="inventory-list">
    <li class="inventory-header flexrow">
        <h3 class="item-name flexrow">{{localize "CO.label.long.capacities"}}</h3>
        <div class="item-detail"></div>
        <div class="item-detail item-rank">{{localize "CO.label.long.rank"}}</div>
        <div class="item-controls">
            <a class="item-control item-create cof-compendium-pack" data-pack="capacities" data-open="0" title="Ajouter une capacitÃ©"><i class="fas fa-plus"></i>&nbsp; {{localize "CO.label.long.add"}}</a>
        </div>
    </li>
    <ol class="item-list"></ol>
    {{#each capacities as |capacity id|}}
        {{log 'capacity' capacity id}}
        <li class="item flexrow" data-item-type="capacity" draggable="true" data-rank="{{add id 1}}" data-uuid="{{capacity.uuid}}">
            <div class="item-name flexrow">
                <div class="item-image" style="background-image: url('{{capacity.img}}'); background-size: 25px; background-repeat: no-repeat;"></div>
                <h4 data-tooltip="{{capacity.description}}">{{capacity.name}}</h4>
            </div>
            <div class="item-detail"></div>
            <div class="item-detail item-rank">{{add id 1}}</div>
            <div class="item-controls">
                <a class="item-control item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
                <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
        </li>
    {{/each}}
</ol>
</ol>
