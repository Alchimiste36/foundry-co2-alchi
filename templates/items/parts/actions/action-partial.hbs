<div class="flexrow">
    <h3 class="form-header"><a class="actions-toggle">{{localize "CO.ui.actions"}}</a></h3>
</div>
<div class="actions-form">
    <button type="button" class="action-button action-add" title="{{localize "CO.ui.add"}}" tabindex="-1">
        <i class="fas fa-add"></i>
    </button>
    <div class="actions">
        <nav class="action-tabs tabs" data-group="actions">
            {{#each system.actions as |action idx|}}
                <a class="item" data-tab="{{idx}}" title="{{action.label}}"><img class="action-icon-small" src="{{action.img}}" title="{{action.label}}"/></a>
            {{/each}}
        </nav>
        {{#if system.actions}}
            <section class="action-body">
                {{#each system.actions as |action idx|}}
                    <div class="tab action item" data-group="actions" data-tab="{{idx}}" data-item-id="{{idx }}" data-item-type="action">
                        <div class="form-group">
                            <label>{{localize "CO.ui.label"}}</label>
                            <div class="form-fields">
                                <input class="field-value" name="system.actions.{{idx}}.label" type="text" value="{{action.label}}" placeholder="{{localize "CO.ui.label"}}" data-dtype="String">
                                <button type="button" class="action-button action-delete" title="{{localize "CO.ui.remove"}}" tabindex="-1">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>{{localize "CO.ui.type"}}</label>
                            <div class="form-fields">
                                <select name="system.actions.{{idx}}.type" data-type="String" style="width:100%">
                                    {{#select action.type}}
                                        {{#each @root.config.action.types as |label idx|}}
                                            <option value="{{idx}}">{{localize label}}</option>
                                        {{/each}}
                                    {{/select}}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>{{localize "CO.ui.img"}}</label>
                            <div class="form-fields">
                                <input class="field-value" data-edit="img" name="system.actions.{{idx}}.img" type="text" value="{{action.img}}" placeholder="{{localize "CO.ui.img"}}" data-dtype="String">
                                <button type="button" class="action-button file-picker" data-type="imagevideo" data-target="system.actions.{{idx}}.img" title="Parcourir les fichiers" tabindex="-1">
                                    <i class="fas fa-file-import fa-fw"></i>
                                </button>
                            </div>
                        </div>
                        {{> "systems/co/templates/items/parts/actions/conditions-partial.hbs" action=action idx=idx}}
                        {{> "systems/co/templates/items/parts/actions/modifiers-partial.hbs" action=action idx=idx}}
                        {{> "systems/co/templates/items/parts/actions/resolvers-partial.hbs" action=action idx=idx}}
                    </div>
                {{/each}}
            </section>
        {{/if}}
    </div>
</div>