<h4 class="form-header"><a class="conditions-toggle">{{localize "CO.ui.conditions"}}</a></h4>
<div class="conditions-container">
    {{#if action.conditions}}
        <div class="flexrow">
            <div class="form-fields flex1">Subject</div>
            <div class="form-fields flex1">Predicate</div>
            <div class="form-fields flex1">Object</div>
        </div>
        {{#each action.conditions as |c id|}}
        <div class="flexrow condition" data-item-id="{{id}}" data-action-id="{{../idx}}" data-item-type="condition">
            <div class="form-fields flex1"><input name="system.actions.{{../idx}}.conditions.{{id}}.subject" type="text" value="{{c.subject}}" data-dtype="String" /></div>
            <div class="form-fields flex1"><input name="system.actions.{{../idx}}.conditions.{{id}}.predicate" type="text" value="{{c.predicate}}" data-dtype="String" /></div>
            <div class="form-fields flex1"><input name="system.actions.{{../idx}}.conditions.{{id}}.object" type="text" value="{{c.object}}" data-dtype="String" /></div>
            <div class="form-fields flex0"><span class="condition-delete"><i class="fas fa-trash"></i></span></div>
        </div>
        {{/each}}
    {{else}}
        <div class="flexrow">
            <span>Aucune condition.</span>
        </div>
    {{/if}}
    <div class="flexrow">
        <a class="condition-add" title="{{localize "CO.ui.add"}}"><i class="fas fa-add"></i></a>
    </div>
</div>